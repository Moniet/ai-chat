{
  "version": "0.1.0",
  "manifest_version": 3,
  "name": "Aiko",
  "background": {
    "service_worker": "service-worker-loader.js",
    "type": "module"
  },
  "permissions": [
    "activeTab",
    "unlimitedStorage",
    "storage",
    "tabs",
    "sidePanel",
    "scripting"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://localhost:3002/*",
    "http://localhost:3001/*",
    "https://api.openai.com/*",
    "https://api.fireworks.com/*",
    "https://api.claude.com/*"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },
  "content_scripts": [
    {
      "js": [
        "assets/content-script.ts-loader-BQ1dL70s.js"
      ],
      "matches": [
        "https://*/*"
      ],
      "run_at": "document_start",
      "css": [
        "assets/content-script-Bj_Z7cEJ.css"
      ]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": [
        "https://*/*"
      ],
      "resources": [
        "assets/content-script.ts-D95cgeRL.js"
      ],
      "use_dynamic_url": true
    }
  ],
  "side_panel": {
    "default_path": "src/components/pages/Sidebar/sidebar.html"
  },
  "commands": {
    "toggle-sidebar": {
      "suggested_key": {
        "default": "Ctrl+Shift+O",
        "mac": "Command+Shift+O"
      },
      "global": true,
      "description": "Toggle the Aiiko Sidebar"
    }
  }
}
